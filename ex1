html
----------------------------------------------

<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Πράξεις με JavaScript</title>
		<style>
			input {
				margin: 10px;
			}
			#calculate {
				width: 200px;
				padding: 10px;
				border: 1px solid black;
				text-align: center;
				background-color: lightgrey;
			}
			#calculate:hover {
				cursor: pointer;
			}
			span {
				font-weight: bold;
			}
		</style>
	</head>
	<body>
		<input type="text">
		<select>
			<option value="+">+</option>
			<option value="-">-</option>
			<option value="*">*</option>
			<option value="/">/</option>
		</select>
		<input type="text">
		<p id="calculate">Calculate...</p>
		<p>Result: <span></span></p>
		<script src="ex_01.js"></script>
	</body>
</html>


javascript
---------------------------------

const inputs = document.getElementsByTagName('input');
const operator = document.querySelector('select');
const result = document.querySelector('span');

document.getElementById('calculate').addEventListener('click', function (ev) {
    let message = 'Invalid numbers...'; 

    const num0 = Number(inputs[0].value);
    const num1 = Number(inputs[1].value);

    switch (operator.value) {
        case '+':
            message = num0 + num1 + '';
            break;
        case '-':
            message = num0 - num1 + '';
            break;
        case '*':
            message = num0 * num1 + '';
            break;
        case '/':
            message = num0 / num1 + '';
            break;
    }

    result.innerHTML = message;
});
